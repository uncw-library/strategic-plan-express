{{!-- Single Goal block --}}

<div class="accordion-item">
  <h2 class="accordion-header" id="goal-{{ goalData.id }}">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-goal-{{goalData.id}}" aria-expanded="false" aria-controls="collapse-goal-{{goalData.id}}">
      {{plusOne @index}}: {{ goalData.description }}     
    </button>
  </h2>
  <div id="collapse-goal-{{ goalData.id }}" class="accordion-collapse collapse" aria-labelledby="goal-{{ goalData.id }}" data-bs-parent="#goal-accordion">
    <div class="accordion-body">
      <div id="objectives-container-{{ goalData.id }}" class="container-fluid shadow p-3 mb-5 rounded objectives-container">
        <div class="row">
          <div class="container-fluid col-12">
            <h2>Objectives:</h2>
          </div>
        </div>
        <div id="objective-accordion-{{ goalData.id }}" class="accordion accordion-flush">
          {{#each goalData.objectives as |objective|}}
            {{!-- Single Objective block  --}}
            {{> objectiveItem objectiveData=objective loggedIn=../loggedIn }}
            {{!-- end Single Objective block --}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- end Single Goal block --}}