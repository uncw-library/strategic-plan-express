{{!-- Single Objective block --}}

<div class="accordion-item">
  <h2 class="accordion-header" id="objective-{{ objectiveData.id }}">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-objective-{{objectiveData.id}}" aria-expanded="false" aria-controls="collapse-objective-{{objectiveData.id}}">

      {{plusOne @index}}: {{ objectiveData.description }}
        
    </button>
  </h2>
  <div id="collapse-objective-{{ objectiveData.id }}" class="accordion-collapse collapse" aria-labelledby="objective-{{ objectiveData.id }}" data-bs-parent="#objective-accordion">

    <div class="accordion-body">
      <div class="row">
        <div class="container-fluid col-8">
          <h4 id="summary-objective-{{ objectiveData.id }}">Summary</h4>
        </div>
          <div class="container-fluid col-4 mr-auto d-md-flex justify-content-md-end">
          {{#if loggedIn}}
            <a href="/edit-summary/{{ objectiveData.id }}" class="btn btn-outline-primary">Edit Summary</a>
          {{/if}}
          </div>
      </div>

      <div class="container-fluid shadow p-3 mb-5 bg-body rounded" style="position: relative; overflow-y:scroll; tabindex:0">
        <div class="summary-item summary-status"><strong>Status: </strong>{{ objectiveData.status }}</div>
        <div class="summary-item summary-year"><strong>Target Academic Year: </strong>{{ objectiveData.target_academic_year }}</div>
        <div class="summary-item summary-leads"><strong>Leads: </strong>{{ objectiveData.leads }}</div>
        <div class="summary-item summary-members"><strong>Members: </strong>{{ objectiveData.project_members }}</div>
      </div>

      <div class="row">
        <div class="container-fluid col-8">
          <h4 id="measures-objective-{{ objectiveData.id }}">Measures</h4>
        </div>
          <div class="container-fluid col-4 mr-auto d-md-flex justify-content-md-end">
          {{#if loggedIn}}
            <a href="/edit-measures/{{ objectiveData.id }}" class="btn btn-outline-primary">Edit Measures</a>
          {{/if}}
          </div>
      </div>

      <div class="container-fluid shadow p-3 mb-5 bg-body rounded" style="position: relative; height:330px; overflow-y:scroll; tabindex:0">
        <div>
          <p><strong>1. What data will be collected:</strong></p>
          <p>{{ objectiveData.what_data_will_be_collected }}</p>
          <p><strong>2. How often is this assessment done:</strong></p>
          <p>{{ objectiveData.how_often_assessed }}</p>
          <p><strong>3. What is the acceptable benchmark:</strong></p>
          <p>{{ objectiveData.acceptable_benchmark }}</p>
          <p><strong>4. Please add a description of and a link to assessment documents (saved on Sharepoint).</strong></p>
          <p>{{ objectiveData.assessment_documents }}</p>
        </div>
      </div>
