      <div class="row">
        <div class="container-fluid col-9">
          <h4 id="notes-objective-{{ objectiveData.id }}">Notes</h4>
        </div>
          <div class="container-fluid col-3 mr-auto d-md-flex justify-content-md-end">
          {{#if loggedIn}}
            <a href="/add-note/{{ objectiveData.id }}" class="btn btn-outline-primary">Add Note</a>
          {{/if}}
          </div>
      </div>
      <div class="container-fluid shadow p-3 mb-5 bg-body rounded" style="position: relative; height:300px; overflow-y:scroll; tabindex:0">
        {{#each objectiveData.notes as |note| }}
          <p class="notes-user"><strong>{{ note.user }}:</strong></p>
          <p class="notes-text">{{ note.text }}</em></p>
          <p class="notes-date">{{ note.formattedDate }}</p>
        {{/each}}
      </div>
    </div>
  </div>
</div>

